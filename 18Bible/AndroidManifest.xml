<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chccc.bible"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bible_launch"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden"
            android:name="com.chccc.bible.BibleMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.chccc.bible.BibleChapterChooserActivity" 
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden"
   			/>
         
         <activity
            android:name="com.chccc.bible.BookIndexActivity" 
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden"
   			/>
   		
         <activity
            android:name="com.chccc.bible.BibleBookChooserActivity" 
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden"
   			/>	
   			
         <activity
            android:name="com.chccc.bible.BibleBookChapterChooserActivity" 
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden"
   			/>	
   			
        
    </application>
    
</manifest>
